<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="click">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

